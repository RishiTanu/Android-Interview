<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:id="@+id/questionpage"
    android:gravity="center"
    android:weightSum="4"
    android:background="@drawable/makeit"
    android:layout_height="60dp">

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginRight="15dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_surround_sound_black_24dp"
       />

    <TextView
        android:id="@+id/question_bar_title"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:gravity="center"
        android:text="@string/question" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:background="@drawable/ic_videocam_off_black_24dp" />
</LinearLayout>