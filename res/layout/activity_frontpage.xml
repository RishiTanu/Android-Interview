<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frontpage"
    android:background="@drawable/leaf"
    tools:context="com.example.alekhsingh.androidinterviewstart.FrontpageActivity">


    <Button
        android:id="@+id/stq"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="141dp"
        android:background="@drawable/drawable_custom"
        android:gravity="center"
        android:text="@string/stq"
        android:textAllCaps="false"
        android:textColor="@color/txtcol"
        android:textSize="25sp" />

    <Button
        android:id="@+id/tq"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stq"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="61dp"
        android:layout_marginLeft="61dp"
        android:layout_marginTop="87dp"
        android:background="@drawable/drawable_custom"
        android:text="@string/tq"
        android:textAllCaps="false"
        android:textColor="@color/txtcol"
        android:textSize="25sp" />

    <Button
        android:id="@+id/otherapp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tq"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="98dp"
        android:textAllCaps="false"
        android:layout_marginEnd="49dp"
        android:layout_marginRight="49dp"
        android:background="@drawable/drawable_custom"
        android:text="@string/other"
        android:textColor="@color/txtcol"
        android:textSize="25sp" />

    <Button
        android:id="@+id/rateing"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otherapp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="67dp"
        android:textAllCaps="false"
        android:layout_marginLeft="67dp"
        android:layout_marginTop="101dp"
        android:background="@drawable/drawable_custom"
        android:text="@string/rate"
        android:textColor="@color/txtcol"
        android:textSize="25sp" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/problack"
        android:minHeight="?attr/actionBarSize"
        style="@style/MyToolbarTheme"
        android:theme="@style/MyToolbarTheme"
        app:popupTheme="@style/MyToolbarThemepopup"/>
</RelativeLayout>
